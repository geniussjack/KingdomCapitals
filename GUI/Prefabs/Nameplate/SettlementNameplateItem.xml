<?xml version="1.0" encoding="utf-8"?>
<Prefab>
  <!--
    This XML prefab adds a crown icon over capital city nameplates.
    It extends the standard SettlementNameplateItem prefab by adding
    a crown icon widget that is visible only when IsCapital property is true.
  -->

  <!-- Crown Icon Widget - displayed only for capital cities -->
  <Window>
    <Widget DoNotAcceptEvents="true" DoNotPassEventsToChildren="true"
            WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent">
      <Children>
        <!-- Crown icon container -->
        <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
                SuggestedWidth="30" SuggestedHeight="30"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                PositionYOffset="-35"
                IsVisible="@IsCapital">
          <Children>
            <!-- The actual crown icon using game's built-in sprite -->
            <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
                    SuggestedWidth="30" SuggestedHeight="30"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Sprite="SPScoreboard\leader_crown_icon" />
          </Children>
        </Widget>
      </Children>
    </Widget>
  </Window>
</Prefab>
